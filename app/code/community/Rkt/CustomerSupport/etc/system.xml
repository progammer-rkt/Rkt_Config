<config>
    <tabs>
        <rkt translate="label" module="rkt_customersupport">
            <label>Rkt - Customer Support</label>
            <sort_order>2000</sort_order>
        </rkt>
    </tabs>
    <sections>
        <rkt_customersupport translate="label" module="rkt_customersupport">
            <class>separator-top</class>
            <label>Customer Support</label>
            <tab>rkt</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <productenquiry translate="label" module="rkt_customersupport">
                    <label>Product Enquiry</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <status translate="label">
                            <label>Include Product Enquiry for in product view page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                        <display translate="label">
                            <label>How should display enquiry form ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>rkt_customersupport/system_config_source_display</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display>
                        <enquiry_history translate="label">
                            <label>Need to show enquiry history in product view page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enquiry_history>
                    </fields>
                </productenquiry>
            </groups>
        </rkt_customersupport>
    </sections>
</config>
